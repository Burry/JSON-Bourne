//-
	Reset Password
	------------------------------
	
	Args
	* modal  - boolean
	* initial [default "join"] - accepts "sign-in" | "join" | "password"
	
mixin form-reset(args)
	.auth-box.modal-pane-sign-in(class=args.modal && args.initial != 'sign-in' ? 'hidden' : null)
		if args.modal
			.modal-header
				button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
				h4.modal-title Reset password
		div(class=args.modal ? 'modal-body' : null)
			form.auth-form.form-sign-in(method='post', action='/reset-password/' + key, role='sign-in')
				input(type='hidden', name='action', value='reset-password')
				.form-control-box
					label.sr-only(for='sign-in-password') New password
					input.form-control.form-control--last(type='password', name='password', placeholder='Password', id='sign-in-password', value='')
				.row: .col-6.mx-auto
					button.btn.btn-lg.btn-block.btn-primary.btn-submit(type='submit') Reset password
			

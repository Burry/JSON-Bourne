//-
	Password Form
	------------------------------
	
	Args
	* modal  - boolean
	* initial [default "join"] - accepts "sign-in" | "join" | "password"
	
mixin form-password(args)
	.auth-box.modal-pane-password(class=args.modal && args.initial != 'password' ? 'hidden' : null)
		if args.modal
			.modal-header
				h4.modal-title Locked out?
				button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
		div(class=args.modal ? 'modal-body' : null)
			form.form-password(method='post', action='/forgot-password', role='password-retrieval', novalidate).auth-form
				input(type='hidden', name='action', value='forgot-password')
				.form-groups
					.form-group
						label.sr-only(for='email') Email address
						input.form-control.form-control--first.form-control--last(type='email', name='email', id='email', placeholder='Email address', value=locals.form ? locals.form.email : null)
				.row: .col-6.mx-auto
					button.btn.btn-lg.btn-block.btn-primary.btn-submit(
						type='submit'
						data-loading-text='Sending...') Send reset link
			p.text-center.text-muted.mt-3
				| Nevermind, 
				a(href=args.modal ? js : '/sign-in', rel=args.modal ? 'modal-pane' : null, data-modal-pane=args.modal ? 'sign-in' : null) sign in
